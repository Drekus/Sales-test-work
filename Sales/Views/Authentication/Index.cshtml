@model Sales.Models.ViewModels.BaseViewModel
@{
    ViewData["Title"] = "Вход по промокоду";
}
<partial name="_ErrorPanel" model="Model" />
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-action="Login" method="post" class="form-horizontal">
                <h4>Войдите, спользуя промокод</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Введите ваш промокод:</label>
                    <div class="col-md-6">
                        <input type="text" id="promoCode" name="promoCode" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Войти</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <section style="">
            <h4>При отсутвии промокода</h4>
            <hr />
            <p>
                <a asp-action="Login" class="btn btn-info">Сгенерировать промокод и войти</a>
            </p>
        </section>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

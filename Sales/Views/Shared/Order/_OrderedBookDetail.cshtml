@model Sales.Models.DataModels.OrderedBook

<div>
    <div>
        <h4>@Html.DisplayFor(model => model.Book.Author). @Html.DisplayFor(model => model.Book.Title)</h4>
        <br />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Book.ISBN)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Book.ISBN)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Book.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Book.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.BookAmount)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BookAmount)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cost)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cost)
            </dd>
        </dl>
    </div>
    @if (!@Model.Order.IsСheckouted)
    {
        <div class="row">
            <div class="col-md-6">
                @if (Model.Book.Quantity > Model.BookAmount)
                {
                    <form asp-controller="Home" asp-action="AddToOrder" method="post" class="form-horizontal">
                        <div class="form-group">
                            <input type="number" class="hide" name="bookId" value="@Model.BookId" />
                            <input type="hidden" class="hide" name="page" value="@ViewData["PageNumber"]"/>
                            <button type="submit" class="btn btn-sm btn-info">Добавить в заказ</button>
                        </div>
                    </form>
                }
            </div>
            <div class="col-md-6">
                <form asp-controller="Home" asp-action="RemoveFromOrder" method="post" class="form-horizontal">
                    <div class="form-group">
                        <input type="number" class="hide" name="bookId" value="@Model.BookId" />
                        <input type="hidden" class="hide" name="page" value="@ViewData["PageNumber"]"/>
                        <button type="submit" class="btn btn-sm btn-danger">Удалить из заказа</button>
                    </div>
                </form>
            </div>
        </div>
    }
    <hr />
</div>
